<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.MusicFragment">

    <ImageView
        android:id="@+id/curtain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-190dp"
        android:contentDescription="@string/curtain"
        android:elevation="1dp"
        android:src="@drawable/curtain_music"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <ScrollView
        android:layout_width="356dp"
        android:layout_height="515dp"
        android:layout_weight="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imvCircular"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/music_music_image_4"
                app:layout_constraintEnd_toStartOf="@+id/imvCircularWithStroke"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/SpecificCornerRounded" />


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imvCircular2"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/music_music_image_4"
                app:layout_constraintEnd_toStartOf="@+id/imvCircularWithStroke"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/SpecificCornerRounded" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imvCircular3"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/music_music_image_4"
                app:layout_constraintEnd_toStartOf="@+id/imvCircularWithStroke"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/SpecificCornerRounded" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imvCircular4"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/music_music_image_4"
                app:layout_constraintEnd_toStartOf="@+id/imvCircularWithStroke"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/SpecificCornerRounded" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imvCircular5"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/music_music_image_4"
                app:layout_constraintEnd_toStartOf="@+id/imvCircularWithStroke"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/SpecificCornerRounded" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imvCircular6"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/music_music_image_4"
                app:layout_constraintEnd_toStartOf="@+id/imvCircularWithStroke"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/SpecificCornerRounded" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>